{
    "files.exclude": {
        // üóÇÔ∏è modules and folders
        // "tools": true,

        // ‚öôÔ∏è config
        "Taskfile.yml": true,
        "**/**/*.code-workspace": true,
        // "poetry.lock": true,
        /// "poetry.toml": true,

        // üßº linters & styles
        // ".ruff.toml": true,
        // "coco.yml": true,
        // ".env": true,

        // üß™ tests
        // "tests": true,
        // "conftest.py": true,

        // üóëÔ∏è
        ".task": true, // task-go
        ".venv": true,
        ".vscode": true,
        ".ruff_cache": true,
        "**/**/__pycache__": true,
        ".git": true,
        ".gitignore": true,
        ".pytest_cache": true,
    },
    "[python]": {
        "editor.formatOnSave": true,
        "editor.codeActionsOnSave": {
            "source.fixAll": "explicit",
            "source.organizeImports": "explicit"
        },
        "editor.defaultFormatter": "charliermarsh.ruff"
    },

    "evenBetterToml.schema.associations": {
        "\\.?coco(\\.yml|\\.yaml|rc)$": "https://gist.githubusercontent.com/lucas-labs/0cb798e4b6c7fc720c7111c40d215c21/raw/cb068efd7d73794e738a5240a80f0cb729883553/coco-schema.json"
    },

    "python.testing.pytestArgs": [
        "tests",
        "--verbose",
        "--no-header",
        "--import-mode=importlib",
        "--envfile=./tests/.env",
    ],
    
    "python.testing.unittestEnabled": false,
    "python.testing.pytestEnabled": true,
    "python.analysis.typeCheckingMode": "basic",
    "python.analysis.indexing": true,
    "python.analysis.autoImportCompletions": true,
    "python.analysis.packageIndexDepths":[
        // { "name": "sqlalchemy", "depth": 10, "includeAllSymbols": true },
        // { "name": "sqlmodel", "depth": 10, "includeAllSymbols": true },
        // { "name": "fastapi", "depth": 10, "includeAllSymbols": true },
        // { "name": "pydantic", "depth": 10, "includeAllSymbols": true },
        // { "name": "common", "depth": 10, "includeAllSymbols": true },
    ],
}
